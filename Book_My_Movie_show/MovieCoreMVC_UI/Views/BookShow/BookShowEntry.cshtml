<form method="post" enctype="multipart/form-data">
    <h2>BookShow Entry</h2><hr />
    <div class="form-group">
        <label>ShowTimingId</label>
        <input type="number" asp-for="ShowTimingId" class="form-control" placeholder="enter a ShowTimingId" required />
    </div>
   
    <div class="form-group">
        <label>UserId</label>


        <input type="number" asp-for="UserId" class="form-control" placeholder="enter a UserId" required />
    </div>
    <div class="form-group">
        <label>Price For 1 ticket</label>
        <input type="number" asp-for="TicketCost" class="form-control" placeholder="Ticket Cost" required />
    </div>
    <div class="form-group">
        <label>No Of Tickets You Want?</label>
        <input type="number" asp-for="NoOfTickets" class="form-control" placeholder="enter a NoOfTickets" required />
    </div>
    


    <hr />
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
</form>
